{
  "compilerOptions": {
    // This is the crucial line that fixes your error.
    // It tells TypeScript how to compile JSX for modern React.
    "jsx": "react-jsx",
    
    // --- Standard Modern Library Settings ---
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "lib": ["DOM", "ESNext"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "declaration": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "*": ["src/*"]
    }
  },
  // --- Important: Tell TypeScript what to include/exclude ---
  "include": ["src"],
  "exclude": ["node_modules", "dist", "demo"]
}